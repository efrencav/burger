<div class="container-fluid col-10">
  <div class="row">
    <div class="col">
    </div>
    {{!-- Header --}}
    <div class="col">
      <h1  class="text-white">Eat-the-Burger!</h1>
      <img id="bacon-burger" class="mb-4 img-responsive" src="./assets/img/bacon-burger.png">
    </div>
    <div class="col">
    </div>
  </div>
  {{!-- On the Menu --}}
    <div class="row mb-4">
      <div class="col-6 bg-orange-opacity padding-20px-top">
        <h2 class="text-white">On the Menu!</h2>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
              <li>
                {{burger_name}}<button class="devour" data-id="{{id}}">Devour Burger!</button>
              </li>
              {{/unless}}
            {{/each}}
          </ul>
      </div>
      {{!-- Devoured burger --}}
      <div class="col-6 bg-orange-opacity padding-20px-top">
        <h2 class="text-white">Devoured Burgers!</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
              <li>
                {{burger_name}}
              </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
    </div>
    {{!-- add a burger section --}}
    <div class="col bg-white">
      <h3 >Add a Burger</h3>
      <form class="create-form">
        <div class="row">
          <div class="form-group centered">
            <label for="burg">Burger: </label>
            <input class="extra-big-input" type="text" id="burg" name="name">
          </div>
          <button type="submit" class="btn btn-large btn-black ">Add Burger</button>
        </div>
      </form>
    </div>
</div>
